{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "types": ["svelte"],
    "typeRoots": ["./node_modules/@types", "./node_modules/svelte/types"],
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$stores/*": ["src/stores/*"],
      "$interfaces/*": ["src/interfaces/*"],
      "$schema/*": ["src/schema/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.svelte"]
}
